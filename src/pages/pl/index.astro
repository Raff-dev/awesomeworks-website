---
import Base from "@/layouts/base.astro";
import Nav from "@/components/nav.astro";
import Hero from "@/components/hero.astro";
import Services from "@/components/services.astro";
import WhyAi from "@/components/why-ai.astro";
import Process from "@/components/process.astro";
import Founder from "@/components/founder.astro";
import Products from "@/components/products.astro";
import Faq from "@/components/faq.astro";
import FinalCta from "@/components/final-cta.astro";
import Contact from "@/components/contact.astro";
import Footer from "@/components/footer.astro";
import { t } from "@/i18n/utils";

const locale = "pl";
const i = t(locale);
---

<Base title={i.meta.title} description={i.meta.description} locale={locale}>
  <Nav locale={locale} />
  <main>
    <Hero locale={locale} />
    <Services locale={locale} />
    <WhyAi locale={locale} />
    <Process locale={locale} />
    <Founder locale={locale} />
    <Products locale={locale} />
    <Faq locale={locale} />
    <FinalCta locale={locale} />
    <Contact locale={locale} />
  </main>
  <Footer locale={locale} />
</Base>
