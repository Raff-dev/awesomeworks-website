---
import { t, type Locale } from "@/i18n/utils";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const i = t(locale);
---

<section id="contact" class="relative border-t border-white/[0.06] py-20 sm:py-28">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <h2
      class="animate-on-scroll mb-4 text-center text-3xl font-bold tracking-tight sm:text-4xl"
    >
      {i.contact.title}
    </h2>
    <p class="animate-on-scroll mx-auto mb-14 max-w-2xl text-center text-muted-foreground">
      {i.contact.subtitle}
    </p>

    <div class="mx-auto max-w-4xl">
      <div class="animate-on-scroll grid gap-10 md:grid-cols-2">
        <!-- Info side -->
        <div class="flex flex-col justify-center">
          <!-- Email -->
          <a
            href="mailto:hello@awesomeworks.ai"
            class="group mb-4 flex items-center gap-3 rounded-xl border border-white/[0.06] bg-white/[0.03] p-4 transition-all hover:border-indigo-500/20 hover:bg-white/[0.05]"
          >
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-500/10 text-indigo-400">
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <rect width="20" height="16" x="2" y="4" rx="2"/>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
              </svg>
            </div>
            <div>
              <div class="text-xs text-muted-foreground">{i.contact.email_label}</div>
              <div class="text-sm font-medium text-foreground group-hover:text-indigo-400">hello@awesomeworks.ai</div>
            </div>
          </a>

          <!-- Calendly -->
          <a
            href="https://calendly.com/awesome-works-ai/discovery-call"
            target="_blank"
            rel="noopener noreferrer"
            class="group mb-6 flex items-center gap-3 rounded-xl border border-white/[0.06] bg-white/[0.03] p-4 transition-all hover:border-indigo-500/20 hover:bg-white/[0.05]"
          >
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-emerald-500/10 text-emerald-400">
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <rect width="18" height="18" x="3" y="4" rx="2" ry="2"/>
                <line x1="16" x2="16" y1="2" y2="6"/>
                <line x1="8" x2="8" y1="2" y2="6"/>
                <line x1="3" x2="21" y1="10" y2="10"/>
              </svg>
            </div>
            <div>
              <div class="text-xs text-muted-foreground">{i.contact.calendly_label}</div>
              <div class="text-sm font-medium text-foreground group-hover:text-emerald-400">Calendly</div>
            </div>
          </a>

          <!-- Testimonial -->
          <blockquote class="rounded-xl border border-white/[0.04] bg-white/[0.02] p-5">
            <p class="text-sm italic leading-relaxed text-muted-foreground">
              "{i.contact.testimonial}"
            </p>
          </blockquote>
        </div>

        <!-- Form side -->
        <div>
          <h3 class="mb-5 text-lg font-semibold text-foreground">
            {i.contact.form_title}
          </h3>
          <form
            action="https://api.web3forms.com/submit"
            method="POST"
            class="space-y-4"
          >
            <input type="hidden" name="access_key" value="96db43d4-48ed-482a-9186-a1527a1b7833" />
            <input type="hidden" name="redirect" value={`https://awesomeworks.ai/${locale}/`} />
            <input type="hidden" name="subject" value="New contact from awesomeworks.ai" />

            <div>
              <label for="name" class="mb-1.5 block text-sm font-medium text-foreground">
                {i.contact.form_name}
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full rounded-lg border border-white/[0.08] bg-white/[0.04] px-4 py-2.5 text-sm text-foreground placeholder-muted-foreground/50 outline-none transition-colors focus:border-indigo-500/40 focus:ring-1 focus:ring-indigo-500/20"
                placeholder={i.contact.form_name}
              />
            </div>

            <div>
              <label for="email" class="mb-1.5 block text-sm font-medium text-foreground">
                {i.contact.form_email}
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full rounded-lg border border-white/[0.08] bg-white/[0.04] px-4 py-2.5 text-sm text-foreground placeholder-muted-foreground/50 outline-none transition-colors focus:border-indigo-500/40 focus:ring-1 focus:ring-indigo-500/20"
                placeholder={i.contact.form_email}
              />
            </div>

            <div>
              <label for="message" class="mb-1.5 block text-sm font-medium text-foreground">
                {i.contact.form_message}
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full rounded-lg border border-white/[0.08] bg-white/[0.04] px-4 py-2.5 text-sm text-foreground placeholder-muted-foreground/50 outline-none transition-colors focus:border-indigo-500/40 focus:ring-1 focus:ring-indigo-500/20 resize-none"
                placeholder={i.contact.form_message}
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full rounded-lg bg-gradient-to-r from-indigo-600 to-indigo-400 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-500/25 transition-all hover:shadow-indigo-500/40 hover:brightness-110"
            >
              {i.contact.form_submit}
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
